%% chapter style, chapters without name like Preface are chapter*

\newcommand\HUGE{\@setfontsize\HUGE{40}{50}}

\def\@makechapterhead#1{{\HUGE\sffamily\bfseries\slshape
  \vbox{\advance\textwidth1em\hrule \@height 2pt
    \vspace*{1ex}\hbox to \textwidth{\wordchapter}\vspace*{1ex}
    \hrule \@height 2pt}
  \vspace*{100pt}
  \hbox{\hbox to .1\linewidth{}
  \vbox{\hsize.9\linewidth
    \parindent\z@\hyphenpenalty 10000\raggedright
  #1}}
  \vspace*{1em plus 1fill}
  \pagebreak
  \vspace*{1.7in}\blackline{10pt}
}}
\def\@makeschapterhead#1{{\HUGE\sffamily\bfseries\slshape
  \vbox{\advance\textwidth1em\hrule \@height 2pt
    \vspace*{1ex}\hbox to \textwidth{\uppercase{#1}\hss}\vspace*{1ex}
    \hrule \@height 2pt}
  \vspace*{100pt}
}}

\def\wordchapter{\ifcase\c@chapter\or ONE\or TWO\or THREE\or FOUR\or
FIVE\or SIX\or SEVEN\or EIGHT\or NINE\or TEN\fi\hss}

\def\epilog{\gdef\wordchapter{EPILOGUE}}
\renewcommand\appendix{\par
  \setcounter{chapter}{0}%
  \setcounter{section}{0}%
  \gdef\thechapter{\@Alph\c@chapter}%
  \gdef\wordchapter{APPENDIX \@Alph\c@chapter\hss}%
  \gdef\chapter@upper\relax}

